# coding: utf-8

<table>
  <thead>
    <tr>
      <th></th>
      <th>User</th>
      <th>Tweet</th>
      <th>Time</th>
      <th>Map</th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><img src="<%= tweet.image_url %>" /><td>
        <td><%= tweet.user %></td>
        <td><%= tweet.tweet %></td>
        <td><%= tweet.time %></td>
        <% if tweet.latitude.nil? %>
          <td></td>
        <% else %>
          <td><a href="https://maps.google.com/maps?q=<%= tweet.latitude %>,<%= tweet.longitude %>">Map</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
